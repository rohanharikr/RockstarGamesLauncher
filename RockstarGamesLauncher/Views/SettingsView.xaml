<Page
    x:Class="RockstarGamesLauncher.Views.SettingsView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:RockstarGamesLauncher.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Background="#141517"
    mc:Ignorable="d">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="320" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <Border
            Grid.Column="0"
            Padding="35,0,35,35"
            Background="Black">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="135" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <StackPanel Grid.Row="1" VerticalAlignment="Top">
                    <StackPanel>
                        <Label FontWeight="Bold">Launcher Settings</Label>
                        <StackPanel Margin="0,5,0,0">
                            <Button
                                Margin="0,10,0,0"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center"
                                BorderThickness="0"
                                Foreground="White"
                                Opacity="0.65">
                                General
                            </Button>
                            <Button
                                Margin="0,10,0,0"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center"
                                BorderThickness="0"
                                Foreground="White"
                                Opacity="0.65">
                                Account Information
                            </Button>
                            <Button
                                Margin="0,10,0,0"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center"
                                BorderThickness="0"
                                Foreground="White"
                                Opacity="0.65">
                                Updates
                            </Button>
                            <Button
                                Margin="0,10,0,0"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center"
                                BorderThickness="0"
                                Foreground="White"
                                Opacity="0.65">
                                Legal
                            </Button>
                        </StackPanel>
                    </StackPanel>
                </StackPanel>
            </Grid>
        </Border>

        <Border Grid.Column="1">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="135" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <Border
                    Grid.Row="1"
                    Grid.Column="0"
                    MaxWidth="750"
                    Padding="35,0,35,0">
                    <StackPanel HorizontalAlignment="Stretch">
                        <DockPanel Height="80">
                            <Label VerticalAlignment="Center" FontSize="20">Terms of Service</Label>
                            <Button
                                Width="160"
                                Height="40"
                                HorizontalAlignment="Right"
                                VerticalAlignment="Center"
                                FontSize="16"
                                Foreground="White">
                                VIEW POLICY
                            </Button>
                        </DockPanel>
                        <Border Height="0.35" Background="White" />
                        <DockPanel Height="80">
                            <Label VerticalAlignment="Center" FontSize="20">Privacy Policy</Label>
                            <Button
                                Width="160"
                                Height="40"
                                HorizontalAlignment="Right"
                                VerticalAlignment="Center"
                                FontSize="16"
                                Foreground="White">
                                VIEW POLICY
                            </Button>
                        </DockPanel>
                        <Border Height="0.35" Background="White" />
                        <DockPanel Height="80">
                            <Label VerticalAlignment="Center" FontSize="20">End User License Agreement</Label>
                            <Button
                                Width="160"
                                Height="40"
                                HorizontalAlignment="Right"
                                VerticalAlignment="Center"
                                FontSize="16"
                                Foreground="White">
                                VIEW POLICY
                            </Button>
                        </DockPanel>
                        <Border Height="0.35" Background="White" />
                        <DockPanel Height="80">
                            <Label VerticalAlignment="Center" FontSize="20">Third-Party Licenses</Label>
                            <Button
                                Width="160"
                                Height="40"
                                HorizontalAlignment="Right"
                                VerticalAlignment="Center"
                                FontSize="16"
                                Foreground="White">
                                VIEW POLICY
                            </Button>
                        </DockPanel>
                    </StackPanel>
                </Border>
            </Grid>
        </Border>
    </Grid>
</Page>
