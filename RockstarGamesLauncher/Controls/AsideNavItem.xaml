<UserControl
    x:Class="RockstarGamesLauncher.Controls.AsideNavItem"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:RockstarGamesLauncher.Controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    x:Name="AsideNavItemControl"
    mc:Ignorable="d">
    <StackPanel
        Margin="0,20,0,0"
        Cursor="Hand"
        Orientation="Horizontal">
        <Image
            Width="30"
            Height="30"
            RenderOptions.BitmapScalingMode="HighQuality"
            Source="{Binding Icon, ElementName=AsideNavItemControl}" />
        <Label
            Margin="15,0,0,0"
            VerticalAlignment="Center"
            Content="{Binding Label, ElementName=AsideNavItemControl}"
            Opacity="0.65" />
    </StackPanel>
</UserControl>
