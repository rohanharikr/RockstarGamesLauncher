<UserControl
    x:Class="RockstarGamesLauncher.Controls.AsideNavItem"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:RockstarGamesLauncher.Controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    x:Name="AsideNavItemControl"
    mc:Ignorable="d">
    <Button
        Margin="0,20,0,0"
        HorizontalAlignment="Left"
        BorderThickness="0"
        Command="{Binding Command, ElementName=AsideNavItemControl}"
        CommandParameter="{Binding CommandParameter, ElementName=AsideNavItemControl}">
        <StackPanel Cursor="Hand" Orientation="Horizontal">
            <Border
                Width="2"
                Height="30"
                Margin="-75,0,0,0"
                Background="{StaticResource RockstarYellow}" />
            <Image
                Width="30"
                Height="30"
                RenderOptions.BitmapScalingMode="HighQuality"
                Source="{Binding Icon, ElementName=AsideNavItemControl}" />
            <Label
                Margin="15,0,0,0"
                VerticalAlignment="Center"
                Content="{Binding Label, ElementName=AsideNavItemControl}"
                Opacity="0.65" />
        </StackPanel>
    </Button>
</UserControl>
