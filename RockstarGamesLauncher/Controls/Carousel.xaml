
<UserControl
    x:Class="RockstarGamesLauncher.Controls.Carousel"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:RockstarGamesLauncher.Controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    x:Name="CarouselControl"
    Height="280"
    mc:Ignorable="d">

    <UserControl.Resources>
        <Storyboard x:Key="CarouselStoryboard">
            <DoubleAnimation Storyboard.TargetName="CarouselTransform" Storyboard.TargetProperty="X" />
        </Storyboard>
    </UserControl.Resources>

    <Grid>
        <Canvas ClipToBounds="True">
            <ItemsControl
                x:Name="CarouselStack"
                VerticalAlignment="Center"
                ItemsSource="{Binding Feed, ElementName=CarouselControl}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <StackPanel Orientation="Horizontal" />
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.RenderTransform>
                    <TranslateTransform x:Name="CarouselTransform" />
                </ItemsControl.RenderTransform>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border
                            Width="250"
                            Height="280"
                            Margin="0,0,10,0"
                            Padding="5"
                            Background="Black">
                            <Button Click="OpenFeedPost" Tag="{Binding Link}">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="82*" />
                                        <RowDefinition Height="18*" />
                                    </Grid.RowDefinitions>

                                    <Image
                                        Grid.Row="0"
                                        HorizontalAlignment="Stretch"
                                        VerticalAlignment="Stretch"
                                        Source="{Binding Image}"
                                        Stretch="UniformToFill" />
                                    <TextBlock
                                        Grid.Row="1"
                                        Padding="15,8,15,8"
                                        FontSize="12"
                                        Text="{Binding Title}"
                                        TextWrapping="Wrap" />
                                </Grid>
                            </Button>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </Canvas>

        <DockPanel>
            <Button
                x:Name="PrevButton"
                Width="38"
                Height="38"
                HorizontalAlignment="Left"
                Click="PrevButtonClick">
                <Button.Background>
                    <SolidColorBrush Opacity="0.85" Color="Black" />
                </Button.Background>
                <Image
                    Width="30"
                    Height="30"
                    Source="/Resources/Icons/LeftIcon.png" />
            </Button>
            <Button
                x:Name="NextButton"
                Width="38"
                Height="38"
                HorizontalAlignment="Right"
                Click="NextButtonClick">
                <Button.Background>
                    <SolidColorBrush Opacity="0.85" Color="Black" />
                </Button.Background>
                <Image
                    Width="30"
                    Height="30"
                    Source="/Resources/Icons/RightIcon.png" />
            </Button>
        </DockPanel>
    </Grid>

</UserControl>
